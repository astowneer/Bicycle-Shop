@model BicycleApplication.Entities.Models.Gravel

<h1>Вилучити</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Модель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Колір
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            Рік випуску
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            Матеріал рами
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FrameMaterial)
        </dd>
        <dt class="col-sm-2">
            Тип тормозу
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrakeType)
        </dd>
        <dt class="col-sm-2">
            Тип підвіски
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PedantType)
        </dd>
        <dt class="col-sm-2">
            Діаметр коліс
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiameterOfWheel)
        </dd>
        <dt class="col-sm-2">
            Ширина шини
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TireWidth)
        </dd>
        <dt class="col-sm-2">
            Ширина керма
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandlebarWidth)
        </dd>
        <dt class="col-sm-2">
            Ціна
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id">
        <input type="submit" value="Вилучити" class="btn btn-danger">
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>